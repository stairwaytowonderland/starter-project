	// 		// "TIMEZONE": "America/Chicago",

	// 		* Enable Homebrew installation and usage in the container (disabled by default)
	// 		// "DEV_PARENT_IMAGE": "brewuser",

	// 		* NOTE: "devcontainer", "system", "latest", or specific version like "3.12"
